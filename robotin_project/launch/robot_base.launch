<?xml version="1.0" encoding="UTF-8"?>

<launch>
	<!-- Node to create the odometry from raw wheel velocities -->
	<node pkg="robotin_project" type="robotin_base_node" name="robotin_base"/> 

	<!-- Static tf transforms -->
	<node pkg="tf" type="static_transform_publisher" name="base_to_laser_broadcaster" args="0.08 0 0.15 0 0 0 base_link laser 100" />
	<node pkg="tf" type="static_transform_publisher" name="base_to_camera_broadcaster" args="0 0 0.3 0 0 0 base_link camera_link 100" />
	<node pkg="tf" type="static_transform_publisher" name="base_to_imu_broadcaster" args="0.065 0.0 0.06 0 0 0.0 base_link imu_link 100" />

</launch>
