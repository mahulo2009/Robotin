<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <node pkg="tf" type="static_transform_publisher" name="base_to_laser_broadcaster" args="-0.062 0 0.185 0 0 0 base_link laser 100" />

  <!-- Mapping Node -->
  <group ns="rtabmap">

        <node pkg="rtabmap_ros" type="icp_odometry" name="icp_odometry" output="screen">
        <remap from="scan"                   to="/scan"/>
        <remap from="odom"                   to="/odom"/>
        <remap from="imu"                    to="/imu/data"/>

        <param name="frame_id"                    type="string" value="base_link"/>
        <param name="wait_imu_to_init"            type="bool"   value="true"/>
        <param name="publish_tf"                  type="bool"   value="true"/>
        <param name="scan_voxel_size"             type="double" value="0.05"/>
        <param name="scan_cloud_max_points"       type="int"    value="200"/>

        <param name="guess_frame_id"              type="string" value=""/>
        <param name="guess_min_translation"       type="double" value="0.005"/>
        <param name="guess_min_rotation"          type="double" value="0.01"/>
    </node>

  </group>

</launch>

