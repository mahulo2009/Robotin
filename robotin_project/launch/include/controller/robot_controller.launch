<?xml version="1.0" encoding="UTF-8"?>

<launch>

	<param name="/robotin/robot_wheel_separation_x" type="double" value="0.20" />
	<param name="/robotin/robot_wheel_separation_y" type="double" value="0.16" />		
	<param name="/robotin/robot_wheel_radious" type="double" value="0.034" />

	<param name="/robotin/pid_p" type="double" value="0.1" />
	<param name="/robotin/pid_i" type="double" value="0.5" />		
	<param name="/robotin/pid_d" type="double" value="0.3" />

	<param name="/robotin/ticks_per_revolution" type="int" value="1200" />
	<param name="/robotin/gain" type="double" value="20.0" />
	<param name="/robotin/offset" type="double" value="-250.0" />

	<param name="/robotin/power_min" type="int" value="0" />
	<param name="/robotin/power_max" type="int" value="255" />	

	<param name="/robotin/pin_power_front_left" type="int" value="3" />
	<param name="/robotin/pin_direction_front_left_1" type="int" value="1" />
	<param name="/robotin/pin_direction_front_left_2" type="int" value="2" />								
	<param name="/robotin/pin_encoder_front_left_1" type="int" value="15" />
	<param name="/robotin/pin_encoder_front_left_2" type="int" value="14" />
								
	<param name="/robotin/pin_power_front_right" type="int" value="5" />
	<param name="/robotin/pin_direction_front_right_1" type="int" value="9" />
	<param name="/robotin/pin_direction_front_right_2" type="int" value="10" />
	<param name="/robotin/pin_encoder_front_right_1" type="int" value="16" />
	<param name="/robotin/pin_encoder_front_right_2" type="int" value="17" />
														
	<param name="/robotin/pin_power_back_left" type="int" value="4" />
	<param name="/robotin/pin_direction_back_left_1" type="int" value="8" />
	<param name="/robotin/pin_direction_back_left_2" type="int" value="7" />								
	<param name="/robotin/pin_encoder_back_left_1" type="int" value="21" />
	<param name="/robotin/pin_encoder_back_left_2" type="int" value="20" />								

	<param name="/robotin/pin_power_back_right" type="int" value="6" />
	<param name="/robotin/pin_direction_back_right_1" type="int" value="12" />
	<param name="/robotin/pin_direction_back_right_2" type="int" value="11" />								
	<param name="/robotin/pin_encoder_back_right_1" type="int" value="22" />
	<param name="/robotin/pin_encoder_back_right_2" type="int" value="23" />								

	<node pkg="rosserial_python" type="serial_node.py" name="serial_node" output="screen">
    		<param name="port" value="/dev/ttyACM0"/>
    		<param name="baud" value="115200"/>
	</node>

</launch>
